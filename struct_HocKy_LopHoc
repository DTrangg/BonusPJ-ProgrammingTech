// quản lý lớp học
struct Class {
    string className; // tên lớp
    Student* students; // danh sách sinh viên
    int studentCount; // số sinh viên trong 1 lớp
};

// quản lý học kỳ
struct Semester {
    string semesterId; // id học kỳ
    string schoolYear; // năm học
    string startDate; // ngày bắt đầu học kỳ
    string endDate; // ngày kết thúc học kỳ
    Course* courses; // danh sách khóa học trong học kỳ đó
    int courseCount; // số khóa học trong học kỳ đó
};
